<div class="post-body">
  <%= attachment_image_tag @post_image, :image %>
  <p>タイトル：<%= @post_image.practice_name %></p>
  <p>つぶやき：<%= @post_image.tweet %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_image.admin == current_admin %>
    <%= link_to "削除", admins_post_image_path(@post_image), method: :delete %>
  <% end %>
</div>