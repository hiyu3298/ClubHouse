<h1 class="text-center" style="letter-spacing:0.15em;">タイムライン</h1>
  <div class="border mb-4 mx-auto" style="width:100%">
    <div class="row">
      <% @post_images.each do |post_image| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card mb-3">
            <%= attachment_image_tag post_image, :image, format: 'jpeg', class: "bd-placeholder-img card-img-top", height: "180" %>
            <div class="card-body">
              <h5 class="card-title"><%= post_image.practice_name %></h5>
              <p class="card-text"><%= post_image.tweet %></p>
              <%= link_to "詳細を見る", post_image_path(post_image.id), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>