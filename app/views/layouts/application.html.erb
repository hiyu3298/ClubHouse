<!DOCTYPE html>
<html>
  <head>
    <title>ClubHouse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <%= link_to "Club House", "#", class: "navbar-brand" %>
    <% if current_user %>
      <div style="color:white">ようこそ
        <%= current_user.name %>さん
      </div>
    <% end %>

        <ul class="navbar-nav nav justify-content-end mr-sm-2">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "　マイページ", user_path(current_user), style: "color: white" %>
            </li>
            <li class="nav-item">
              <%= link_to "　チーム一覧", "#", style: "color: white" %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログアウト", destroy_user_session_path, method: :delete, style: "color: white" %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "　チーム詳細", admin_path(current_admin), style: "color: white" %>
            </li>
            <li class="nav-item">
              <%= link_to "　予約一覧", "#", style: "color: white" %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログアウト", destroy_admin_session_path, method: :delete, style: "color: white" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "　新規登録", new_user_registration_path, style: "color: white" %>
            </li>
            <li class="nav-item">
              <%= link_to "　ログイン", new_user_session_path, style: "color: white" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>


    <%= yield %>
  </body>
</html>
